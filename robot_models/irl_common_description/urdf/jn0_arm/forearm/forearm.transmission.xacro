<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro name="johnny_0_forearm_transmission" params="side">
		
		<!-- Elbow tilt -->
		<transmission type="pr2_mechanism_model/SimpleTransmission" name="${side}_elbow_tilt_trans">
			<actuator name="${side}_elbow_tilt_motor" />
			<joint name="${side}_elbow_tilt_joint" />
			<mechanicalReduction>1.0</mechanicalReduction>
		</transmission>
		
	</xacro:macro>

</robot>
