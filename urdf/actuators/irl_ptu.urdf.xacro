<?xml version="1.0"?>
<robot xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
       xmlns:xacro="http://ros.org/wiki/xacro">

	<include filename="$(find irl_common_description)/urdf/common_geometry.xacro" />
	<include filename="$(find irl_common_description)/urdf/actuators/irl_ptu.transmission.xacro" />

    <!-- Similar to the Directed Perception definition, but with Dynamixel
         actuators. -->

	<xacro:macro name="irl_ptu" params="name parent offset_x offset_y offset_z">

		<joint name="${name}_fixed_joint" type="fixed">
			<parent link="${parent}"/>
			<child link="${name}_pan_link"/>
			<origin xyz="${offset_x} ${offset_y} ${offset_z}" rpy="0 0 0" />
		</joint>
        
        <xacro:simple_box
            name="${name}_pan_link"
            lwh="0.050 0.036 0.041"
            xyz="0 0 0"
            rpy="0 0 0"
            mass="0.100"
            rviz_rgba="0 0 0 1"
            material="black"
        />

		<joint name="${name}_pan_joint" type="revolute">
			<parent link="${name}_pan_link"/>
			<child link="${name}_tilt_link"/>
			<origin xyz="0 0 0.041" rpy="0 0 0" />
			<axis xyz="0 0 1" rpy="0 0 0"/>
            <limit effort="100" velocity="0.1" lower="${-M_PI/2}" upper="${M_PI/2}" />
		</joint>

        <xacro:simple_box
            name="${name}_tilt_link"
            lwh="0.065 0.040 0.050"
            xyz="0 0 0"
            rpy="0 0 0"
            mass="0.100"
            rviz_rgba="0 0 0 1"
            material="black"
        />

		<joint name="${name}_tilt_joint" type="revolute">
			<parent link="${name}_tilt_link"/>
			<child link="${name}_bracket_link"/>
            <origin xyz="0.013 0 0.025" rpy="0 0 0" />
			<axis xyz="0 1 0" rpy="0 0 0"/>
			<limit effort="100" velocity="0.1" lower="-0.170" upper="0.7854" />
		</joint>

        <xacro:simple_box
            name="${name}_bracket_link"
            lwh="0.04 0.04 0.01"
            xyz="0 0 0.030"
            rpy="0 0 0"
            mass="0.100"
            rviz_rgba="0 0 0 1"
            material="black"
        />

        <!-- Ignored by CAN manager, used in Gazebo -->
		<xacro:irl_ptu_transmission name="${name}_pan"/>
		<xacro:irl_ptu_transmission name="${name}_tilt"/>
    
    </xacro:macro>

</robot>

